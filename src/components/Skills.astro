---
import { RESUME } from '../../components/Work-Experience/resume-data.js';

const { skills } = RESUME;
---

<div class="mt-8 pl-10">
  <h2 class="font-serif text-4xl border-b mb-2">Skills</h2>

  {
    skills.map((group) => (
      <div class="mt-3">
        <h4 class="font-bold text-xs uppercase tracking-wide text-gray-500 mb-1">
          {group.name}
        </h4>
        <ul class="pl-4">
          {group.keywords.map((keyword) => (
            <li class="list-disc p-0.5 text-sm">{keyword}</li>
          ))}
        </ul>
      </div>
    ))
  }
</div>
